<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical" android:gravity="center">

    <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:columnCount="4" android:padding="10dip"
            android:background="@color/colorAccent">

        <TextView
                android:text="0"

                android:id="@+id/textView1" android:layout_column="0"
                android:layout_columnSpan="4" android:layout_row="0" android:padding="5dip" android:textSize="36sp"
                android:layout_gravity="fill_horizontal" android:gravity="right"
                android:textColor="@color/colorPrimaryDark"/>
        <Space
                android:id="@+id/space1" android:layout_column="0" android:layout_columnSpan="3"
                android:layout_row="1"/>
        <Button
                android:text="CLR"
                android:id="@+id/button1" android:layout_column="3" android:layout_row="1"
                android:background="@color/colorPrimary"/>
        <Button
                android:text="7"
                android:id="@+id/button2" android:layout_column="0" android:layout_row="2"
                android:background="@color/colorPrimary"/>
        <Button
                android:text="8"
                android:id="@+id/button3" android:layout_column="1" android:layout_row="2"
                android:background="@color/colorPrimary"/>
        <Button
                android:text="9"
                android:id="@+id/button4" android:layout_column="2" android:layout_row="2"
                android:background="@color/colorPrimary"/>
        <Button
                android:text="/"
                android:id="@+id/button5" android:layout_column="3" android:layout_row="2"
                android:background="@color/colorPrimary"/>

        <Button
                android:text="4"
                android:id="@+id/button6" android:layout_column="0" android:layout_row="3"
                android:background="@color/colorPrimary"/>
        <Button
                android:text="5"
                android:id="@+id/button7" android:layout_column="1" android:layout_row="3"
                android:background="@color/colorPrimary"/>
        <Button
                android:text="6"
                android:id="@+id/button8" android:layout_column="2" android:layout_row="3"
                android:background="@color/colorPrimary"/>
        <Button
                android:text="*"
                android:id="@+id/button9" android:layout_column="3" android:layout_row="3"
                android:background="@color/colorPrimary"/>

        <Button
                android:text="1"
                android:id="@+id/button10" android:layout_column="0" android:layout_row="4"
                android:background="@color/colorPrimary"/>
        <Button
                android:text="2"
                android:id="@+id/button11" android:layout_column="1" android:layout_row="4"
                android:background="@color/colorPrimary"/>
        <Button
                android:text="3"
                android:id="@+id/button12" android:layout_column="2" android:layout_row="4"
                android:background="@color/colorPrimary"/>
        <Button
                android:text="-"
                android:id="@+id/button13" android:layout_column="3" android:layout_row="4"
                android:background="@color/colorPrimary"/>

        <Button
                android:text="0"
                android:id="@+id/button14" android:layout_column="0" android:layout_row="5"
                android:background="@color/colorPrimary"/>
        <Button
                android:text="="
                android:id="@+id/button15" android:layout_column="1" android:layout_columnSpan="2"
                android:layout_row="5"
                android:layout_gravity="fill_horizontal" android:background="@color/colorPrimary"/>
        <Button
                android:text="+"
                android:id="@+id/button16" android:layout_column="3" android:layout_row="5"
                android:background="@color/colorPrimary"/>
    </GridLayout>
</LinearLayout>